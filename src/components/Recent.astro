---
import { siteConfig } from "../config";
const hasRecent = siteConfig.recent && siteConfig.recent.length > 0;
---

{
  hasRecent && (
    <section id="recent" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-black">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold" style="color: #FFFFFF;">
              Recent Projects
            </h2>
          </div>

          <div class="lg:col-span-8">
            <div class="relative">
              {siteConfig.recent.map((exp, index) => (
                <div class="relative mb-12 last:mb-0">
                  {/* Timeline dot at top of card */}
                  <div
                    class="absolute left-1/2 -top-2 w-4 h-4 rounded-full -translate-x-1/2 z-20 transition-all duration-300"
                    style="border: 2px solid #54ccef; background-color: #54ccef;"
                  />

                  {/* Connecting line below card */}
                  {index < siteConfig.recent.length - 1 && (
                    <div class="absolute left-1/2 bottom-0 w-0.5 h-12 -translate-x-1/2 translate-y-full z-10" style="background-color: #54ccef;" />
                  )}

                  {/* Recent project card */}
                  <div class="bg-black rounded-lg shadow-sm border-2 border-dashed p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300" style="border-color: #54ccef;">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
                      <div class="w-full">
                        <h3 class="text-lg sm:text-xl font-semibold" style="color: #E0E0E0;">
                          {exp.Study || exp.company}
                        </h3>
                        <p
                          class="text-base sm:text-lg mt-1"
                          style="color: #18eb8f;"
                          set:html={exp.Group?.replace(
                            /(https?:\/\/[^\s]+)/g,
                            '<a href="$1" target="_blank" rel="noopener noreferrer" class="hover:underline" style="color: #18eb8f;">$1</a>'
                          ) || exp.title}
                        />
                      </div>
                      <span class="text-xs sm:text-sm mt-2 sm:mt-0 flex-shrink-0" style="color: #E0E0E0;">
                        {exp.dateRange}
                      </span>
                    </div>

                    <ul class="space-y-2">
                      {(exp.Support || exp.bullets)?.map((bullet) => (
                        <li class="flex items-start">
                          <span class="inline-block w-1.5 h-1.5 rounded-full mt-2 mr-3 flex-shrink-0" style="background-color: #54ccef;" />
                          <span class="text-sm sm:text-base" style="color: #E0E0E0;">
                            {bullet}
                          </span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
