---
import { siteConfig } from "../config";
const hasPeople = siteConfig.people && siteConfig.people.length > 0;
---

{
  hasPeople && (
    <section id="people" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-black">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold" style="color: #FFFFFF;">
              People
            </h2>
          </div>

          <div class="lg:col-span-8">
            {/* People Cards */}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 mb-12">
              {siteConfig.people.map((person) => {
                const Component = person.profileUrl ? "a" : "div";
                const linkProps = person.profileUrl
                  ? {
                      href: person.profileUrl,
                      target: "_blank",
                      rel: "noopener noreferrer",
                    }
                  : {};

                return (
                  <Component
                    {...linkProps}
                    class={`group relative p-6 md:p-8 bg-black rounded-2xl border-2 border-dashed transition-all duration-300 ${
                      person.profileUrl
                        ? "hover:shadow-xl hover:-translate-y-1 cursor-pointer"
                        : "opacity-60"
                    }`}
                    style="border-color: #54ccef;"
                  >
                    {person.profileUrl && (
                      <div class="absolute top-6 right-6 md:top-8 md:right-8 w-10 h-10 md:w-11 md:h-11 flex items-center justify-center rounded-full transition-all duration-300" style="background-color: #54ccef; color: #000000;">
                        <svg
                          class="w-4 h-4 md:w-5 md:h-5 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M7 17L17 7M17 7H7M17 7V17"
                          />
                        </svg>
                      </div>
                    )}

                    <div class="flex flex-col items-center text-center">
                      {person.image ? (
                        <div class="w-32 h-32 md:w-40 md:h-40 mb-4 rounded-full overflow-hidden border-4 shadow-lg" style="background-color: #000000; border-color: #54ccef;">
                          <img
                            src={person.image}
                            alt={person.name}
                            class="w-full h-full object-cover"
                          />
                        </div>
                      ) : (
                        <div class="w-32 h-32 md:w-40 md:h-40 mb-4 rounded-full border-4 shadow-lg flex items-center justify-center" style="background-color: #000000; border-color: #54ccef;">
                          <svg
                            class="w-16 h-16 md:w-20 md:h-20"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            style="color: #54ccef;"
                          >
                            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                          </svg>
                        </div>
                      )}

                      <h3 class="text-xl md:text-2xl font-bold mb-2" style="color: #E0E0E0;">
                        {person.name}
                      </h3>

                      <p
                        class="text-base md:text-lg font-medium mb-3"
                        style="color: #BEBE15;"
                      >
                        {person.title}
                      </p>

                      {person.description && (
                        <p class="text-sm md:text-base" style="color: #E0E0E0;">
                          {person.description}
                        </p>
                      )}
                    </div>
                  </Component>
                );
              })}
            </div>

            {/* Microsoft Form Section */}
            {siteConfig.microsoftFormUrl && siteConfig.microsoftFormUrl !== "YOUR_MICROSOFT_FORM_URL_HERE" && (
              <div class="bg-black rounded-2xl border-2 border-dashed shadow-sm overflow-hidden" style="border-color: #54ccef;">
                <div class="p-6 md:p-8">
                  <h3 class="text-2xl md:text-3xl font-bold" style="color: #54ccef;">
                    Get In Touch
                  </h3>
                  <p class="mt-2" style="color: #E0E0E0;">
                    Fill out the form below to contact us
                  </p>
                </div>
                <div class="relative w-full" style="padding-bottom: 56.25%;">
                  <iframe
                    src={siteConfig.microsoftFormUrl}
                    class="absolute top-0 left-0 w-full h-full border-0"
                    frameborder="0"
                    marginwidth="0"
                    marginheight="0"
                    style="border: none; max-width:100%; max-height:100vh"
                    allowfullscreen
                    webkitallowfullscreen
                    mozallowfullscreen
                    msallowfullscreen
                  />
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </section>
  )
}
