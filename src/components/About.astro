---
import { siteConfig } from "../config";
---

<section id="about" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-black">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2
          class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold"
          style="color: #FFFFFF;"
        >
          About Us
        </h2>
      </div>

      <div class="lg:col-span-8 space-y-8">
        <p class="text-lg sm:text-xl md:text-2xl leading-relaxed" style="color: #E0E0E0;">
          {siteConfig.aboutMe}
        </p>

        <div class="pt-4">
          <div class="flex flex-wrap gap-3">
            {
              siteConfig.skills.map((skill) => (
                <span class="px-3 sm:px-4 py-1.5 sm:py-2 border-2 rounded-lg text-sm sm:text-base md:text-lg font-medium uppercase transition-colors duration-200 hover:bg-blue-900/20" style="border-color: #54ccef; color: #E0E0E0; background-color: transparent;">
                  {skill}
                </span>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
