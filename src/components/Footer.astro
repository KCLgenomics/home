---
import { siteConfig } from "../config";

const hasServices = siteConfig.services && siteConfig.services.length > 0;
const hasRecent = siteConfig.recent && siteConfig.recent.length > 0;
const hasPeople = siteConfig.people && siteConfig.people.length > 0;
---

<footer class="relative bg-black">
  <div class="mx-auto max-w-6xl px-6 lg:px-8">
    <div class="pt-8 pb-4 text-left text-sm" style="color: #54ccef; overflow: hidden; white-space: nowrap;">
      ================================================================================================================================================================================================================
    </div>
    <div class="pt-8 pb-12">
      <div
        class="flex flex-col md:flex-row md:items-center md:justify-between gap-8"
      >
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold" style="color: #54ccef;">
          {siteConfig.name}
        </h3>
        <p class="text-base" style="color: #E0E0E0;">
          Part of <span style="color: #18eb8f;">King's Genomics</span> based in <span style="color: #18eb8f;">Social, Genetic & Developmental Psychiatry Centre</span>, <span style="color: #ff7e7e;">King's College London</span>
        </p>
        <div class="flex gap-x-6">
          <a
            href={`mailto:${siteConfig.social.email}`}
            aria-label="Email"
            class="transition-colors duration-300"
            style="color: #E0E0E0;"
            onmouseover="this.style.color='#54ccef'"
            onmouseout="this.style.color='#E0E0E0'"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-6 w-6"
            >
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path
                d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"
              ></path>
              <path d="M3 7l9 6l9 -6"></path>
            </svg>
          </a>
          
          <a
            href={siteConfig.social.twitter}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Twitter"
            class="transition-colors duration-300"
            style="color: #E0E0E0;"
            onmouseover="this.style.color='#54ccef'"
            onmouseout="this.style.color='#E0E0E0'"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-6 w-6"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M4 4l11.733 16h4.267l-11.733 -16z"></path><path
                d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"></path></svg
            >
          </a>
          {
            siteConfig.social?.instagram && (
              <a
                href={siteConfig.social.instagram}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Instagram"
                class="transition-colors duration-300"
                style="color: #E0E0E0;"
                onmouseover="this.style.color='#54ccef'"
                onmouseout="this.style.color='#E0E0E0'"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-6 w-6"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M4 8a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z" />
                  <path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0" />
                  <path d="M16.5 7.5v.01" />
                </svg>
              </a>
            )
          }
          <a
            href={siteConfig.social.github}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
            class="transition-colors duration-300"
            style="color: #E0E0E0;"
            onmouseover="this.style.color='#54ccef'"
            onmouseout="this.style.color='#E0E0E0'"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-6 w-6"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
              ></path></svg
            >
          </a>
        </div>
      </div>

      <div class="hidden md:block flex flex-col md:items-end gap-4">
        <nav class="flex gap-x-8">
          <a
            href="#about"
            class="text-sm transition-colors"
            style="color: #E0E0E0;"
            onmouseover="this.style.color='#54ccef'"
            onmouseout="this.style.color='#E0E0E0'"
            >About</a
          >
          {
            hasServices && (
              <a
                href="#services"
                class="text-sm transition-colors"
                style="color: #E0E0E0;"
                onmouseover="this.style.color='#54ccef'"
                onmouseout="this.style.color='#E0E0E0'"
              >
                Services
              </a>
            )
          }
          {
            hasRecent && (
              <a
                href="#recent"
                class="text-sm transition-colors"
                style="color: #E0E0E0;"
                onmouseover="this.style.color='#54ccef'"
                onmouseout="this.style.color='#E0E0E0'"
              >
                Recent Projects
              </a>
            )
          }
          {
            hasPeople && (
              <a
                href="#people"
                class="text-sm transition-colors"
                style="color: #E0E0E0;"
                onmouseover="this.style.color='#54ccef'"
                onmouseout="this.style.color='#E0E0E0'"
              >
                Get In Touch
              </a>
            )
          }
        </nav>
        <p class="text-sm" style="color: #E0E0E0;">
          Â© {new Date().getFullYear()}
          {siteConfig.name}. All rights reserved.
        </p>
      </div>
      </div>
    </div>
  </div>
</footer>
